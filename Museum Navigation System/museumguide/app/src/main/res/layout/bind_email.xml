<?xml version="1.0" encoding="utf-8"?>
<?绑定邮箱界面?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCC99">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#006633">

        <Button
            android:id="@+id/bt_backup"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:drawableRight="@drawable/ic_fanhui"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="绑定邮箱"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_height="50dp"
        android:text="请输入您的电子邮箱"
        android:textSize="25dp"
        android:textColor="#000000"
        android:gravity="left"/>

    <EditText
        android:id="@+id/etext_input_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="50dp"
        android:text="请输入验证码"
        android:textSize="25dp"
        android:textColor="#000000"
        android:gravity="left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/etext_input_define_oode"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginLeft="40dp"

            android:background="#FFFFFF"/>

        <Button
            android:id='@+id/bt_get_define_code'
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:text="发送验证码"
            android:textColor="#FFFFFF"
            android:background="#CC9966"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_binddefine"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="确认"
        android:textColor="#FFFFFF"
        android:background="#666666"/>
</LinearLayout>